
[Setup]
AppName=GNU Solfege
AppVerName=GNU Solfege @VERSION@
DefaultDirName={pf}\GNU Solfege
DefaultGroupName=GNU Solfege
OutputBaseFilename=solfege-win32-@VERSION@
SolidCompression=yes
SourceDir=win32
LicenseFile=COPYING.txt

[Files]
Source: "*.*"; DestDir: "{app}"; Flags: recursesubdirs


[Icons]
Name: "{app}\bin\GNU Solfege"; Filename: "{app}\python\pythonw.exe"; Parameters: """{app}\bin\win32-start-solfege.pyw"""; WorkingDir: "{app}\bin"
Name: "{group}\GNU Solfege"; Filename: "{app}\python\pythonw.exe"; Parameters: """{app}\bin\win32-start-solfege.pyw"""; WorkingDir: "{app}\bin"
Name: "{group}\GNU Solfege (debug)"; Filename: "{app}\bin\solfegedebug.bat"; WorkingDir: "{app}\bin"
Name: "{group}\README"; Filename: "{app}\README.txt"
Name: "{group}\INSTALL.win32"; Filename: "{app}\INSTALL.win32.txt"
Name: "{group}\INSTALL"; Filename: "{app}\INSTALL.txt"
Name: "{group}\AUTHORS"; Filename: "{app}\AUTHORS.txt"

